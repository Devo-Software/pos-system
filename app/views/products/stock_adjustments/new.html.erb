<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-4">Ajuste de Stock</h1>
  
  <div class="bg-white shadow rounded-lg p-6">
    <div class="mb-4">
      <strong>Producto:</strong> <%= @product.name %>
    </div>
    <div class="mb-4">
      <strong>Stock Actual:</strong> <%= @current_stock %>
    </div>

    <%= form_tag product_stock_adjustments_path(@product), method: :post, class: "space-y-4" do %>
      <div>
        <%= label_tag :quantity, "Cantidad de Ajuste", class: "block text-sm font-medium text-gray-700" %>
        <%= number_field_tag :quantity, nil, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", 
            placeholder: "Use números negativos para reducir stock" %>
      </div>

      <div>
        <%= label_tag :reason, "Razón del Ajuste", class: "block text-sm font-medium text-gray-700" %>
        <%= text_area_tag :reason, nil, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", 
            rows: 3, placeholder: "Explique la razón del ajuste" %>
      </div>

      <div class="flex justify-end space-x-3">
        <%= link_to "Cancelar", product_path(@product), class: "btn btn-secondary" %>
        <%= submit_tag "Ajustar Stock", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>