<div class="container mx-auto px-4 py-8 max-w-4xl">
  <div class="bg-white shadow-lg rounded-lg overflow-hidden">
    <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
      <h1 class="text-xl font-semibold text-gray-900">Ajuste de Stock</h1>
    </div>

    <div class="p-6">
      <div class="flex items-center gap-x-4 mb-6 bg-indigo-50 p-4 rounded-lg">
        <div class="flex-shrink-0">
          <svg class="w-12 h-12 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
          </svg>
        </div>
        <div>
          <h2 class="text-lg font-medium text-indigo-600"><%= @product.name %></h2>
          <p class="text-indigo-700">Stock Actual: <span class="font-semibold"><%= @current_stock %></span></p>
        </div>
      </div>

      <%= form_tag product_stock_adjustments_path(@product), method: :post, class: "space-y-6" do %>
        <div class="space-y-2">
          <%= label_tag :quantity, "Cantidad de Ajuste", class: "block text-sm font-medium text-gray-700" %>
          <div class="relative rounded-md shadow-sm">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
              </svg>
            </div>
            <%= number_field_tag :quantity, nil, 
                class: "pl-10 px-3 py-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-lg", 
                placeholder: "Use números negativos para reducir stock" %>
          </div>
        </div>

        <div class="space-y-2">
          <%= label_tag :reason, "Razón del Ajuste", class: "block text-sm font-medium text-gray-700" %>
          <div class="relative rounded-md shadow-sm">
            <div class="absolute top-3 left-3 text-gray-400">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
            </div>
            <%= text_area_tag :reason, nil, 
                class: "pl-10 px-3 py-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500", 
                rows: 3, 
                placeholder: "Explique la razón del ajuste" %>
          </div>
        </div>

        <div class="flex justify-end gap-x-3 pt-4 border-t border-gray-200">
          <%= link_to product_path(@product), 
              class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
            Cancelar
          <% end %>
          
          <%= button_tag type: 'submit', 
              class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            Ajustar Stock
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>