<%= form_with(model: currency, class: "space-y-6") do |form| %>
  <% if currency.errors.any? %>
    <div class="bg-red-50 p-4 rounded-md mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">Se encontraron <%= pluralize(currency.errors.count, "error") %></h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% currency.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
    <div>
      <%= form.label :name, "Nombre", class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-2">
        <%= form.text_field :name, required: true, class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" %>
      </div>
    </div>

    <div>
      <%= form.label :code, "Código", class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-2">
        <%= form.text_field :code, required: true, class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" %>
      </div>
      <p class="mt-1 text-xs text-gray-500">Ejemplo: USD, EUR, PYG</p>
    </div>

    <div>
      <%= form.label :symbol, "Símbolo", class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-2">
        <%= form.text_field :symbol, required: true, class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" %>
      </div>
      <p class="mt-1 text-xs text-gray-500">Ejemplo: $, €, ₲</p>
    </div>

    <div>
      <%= form.label :exchange_rate, "Tipo de Cambio", class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-2">
        <%= form.number_field :exchange_rate, step: "0.01", required: true, class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" %>
      </div>
      <p class="mt-1 text-xs text-gray-500">Valor en Guaraníes (PYG)</p>
    </div>

    <div>
      <%= form.label :flag_url, "URL de la Bandera", class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-2">
        <%= form.text_field :flag_url, class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6", required: true %>
      </div>
      <p class="mt-1 text-xs text-gray-500">Ejemplo: https://flagcdn.com/w20/us.png</p>
    </div>

    <div class="flex items-center">
      <div class="flex items-center h-5">
        <%= form.check_box :display, class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded" %>
      </div>
      <div class="ml-3 text-sm">
        <%= form.label :display, "Mostrar en POS", class: "font-medium text-gray-700" %>
        <p class="text-gray-500">Mostrar esta moneda en la pantalla del POS</p>
      </div>
    </div>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to "Cancelar", currencies_path, class: "py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    <%= form.submit 'Guardar',class: "py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>