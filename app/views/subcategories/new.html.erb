<turbo-frame id="modal">
  <div data-controller="modal" class="fixed inset-0 z-[1000] flex items-center justify-center">
    <!-- Fondo Oscuro (Overlay) -->
    <div data-action="click->modal#clickOutside" class="fixed inset-0 bg-black opacity-50"></div>
    
    <!-- Contenido del Modal -->
    <div class="bg-white rounded-lg shadow-lg max-w-md w-full z-[1100] relative">
      <div class="p-4 border-b flex justify-between items-center">
        <h2 class="text-xl font-semibold">Nueva Subcategoría</h2>
        <button type="button" data-action="modal#close" class="text-gray-400 hover:text-gray-500">
          <span class="sr-only">Close</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="p-4">
        <%= form_with url: category_subcategories_path(@category), method: :post, class: "space-y-4" do |form| %>
          <div>
            <%= form.label :name, "Nombre de la Subcategoría", class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>
          <div class="flex justify-end">
            <%= form.submit "Crear", class: "bg-indigo-600 text-white rounded-md px-4 py-2 hover:bg-indigo-500" %>
            <button type="button" data-action="modal#close" class="ml-2 bg-gray-300 text-gray-700 rounded-md px-4 py-2 hover:bg-gray-200">
              Cancelar
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</turbo-frame>
``
