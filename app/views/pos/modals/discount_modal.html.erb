<turbo-frame id="discount_modal">
  <div class="p-6" data-controller="discount">
    <div class="mb-4">
      <div class="flex space-x-4 mb-4">
        <div class="flex items-center">
          <input type="radio" 
                id="amount_type_fixed" 
                name="discount_type" 
                value="fixed" 
                class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" 
                checked
                data-discount-target="fixedRadio"
                data-action="click->discount#toggleSymbols">
          <label for="amount_type_fixed" class="ml-2 block text-sm text-gray-700">Monto Fijo</label>
        </div>
        <div class="flex items-center">
          <input type="radio" 
                id="amount_type_percentage" 
                name="discount_type" 
                value="percentage" 
                class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded"
                data-discount-target="percentageRadio"
                data-action="click->discount#toggleSymbols">
          <label for="amount_type_percentage" class="ml-2 block text-sm text-gray-700">Porcentaje (%)</label>
        </div>
      </div>
      
      <div class="mt-2">
        <label for="discount_amount" class="block text-sm/6 font-medium text-gray-900">Monto de descuento</label>
        <div class="mt-2">
          <div class="flex items-center rounded-md bg-white pl-3 outline-1 -outline-offset-1 outline-gray-300 has-[input:focus-within]:outline-2 has-[input:focus-within]:-outline-offset-2 has-[input:focus-within]:outline-indigo-600">
            <div class="shrink-0 text-base text-gray-500 select-none sm:text-sm/6" data-discount-target="symbol">₲s.</div>
            <div class="shrink-0 text-base text-gray-500 select-none sm:text-sm/6 hidden" data-discount-target="percentageSymbol">%</div>
            <input type="number" 
                  id="discount_amount" 
                  name="discount_amount" 
                  class="block min-w-0 grow py-1.5 pr-3 pl-1 text-base text-gray-900 placeholder:text-gray-400 focus:outline-none sm:text-sm/6 ml-4" 
                  placeholder="0" 
                  min="0"
                  data-discount-target="amount">
          </div>
        </div>
      </div>
      
      <!-- New discount reason field -->
      <div class="mt-4">
        <label for="discount_reason" class="block text-sm/6 font-medium text-gray-900">Motivo del descuento</label>
        <div class="mt-2">
          <textarea 
            id="discount_reason" 
            name="discount_reason" 
            rows="2"
            class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6"
            placeholder="Ej: Promoción, Cliente frecuente, Producto con defecto"
            data-discount-target="reason"></textarea>
        </div>
      </div>
    </div>
    
    <div class="flex justify-end space-x-3">
      <button type="button" 
              class="py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
              data-action="click->modal#close">
        Cancelar
      </button>
      <button type="button" 
              id="apply_discount_button"
              class="py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
              data-action="click->discount#apply">
        Aplicar Descuento
      </button>
    </div>
  </div>
</turbo-frame>