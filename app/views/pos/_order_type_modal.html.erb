<turbo-frame id="order_type_modal">
  <div class="grid grid-cols-2 gap-4">
    <%= link_to "#", 
        class: "p-6 border rounded-lg text-center hover:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500",
        data: { 
          controller: "order-type",
          action: "order-type#select",
          order_type_value: "Para Llevar"
        } do %>
      <div class="flex flex-col items-center">
        <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mb-2">
          <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
          </svg>
        </div>
        <span class="font-medium">Para Llevar</span>
      </div>
    <% end %>

    <%= link_to "#", 
        class: "p-6 border rounded-lg text-center hover:border-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500",
        data: { 
          controller: "order-type",
          action: "order-type#select",
          order_type_value: "Delivery"
        } do %>
      <div class="flex flex-col items-center">
        <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mb-2">
          <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0M6 15h8m4 0h2m-6-4h.01M9 7h1m-.01 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <span class="font-medium">Delivery</span>
      </div>
    <% end %>
  </div>
</turbo-frame>