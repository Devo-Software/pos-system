        <table class="w-full bg-white rounded-md shadow">
          <thead>
            <tr class="border-b border-gray-200">
              <th class="px-4 py-3 text-left font-medium text-gray-700">Producto</th>
              <th class="px-4 py-3 text-left font-medium text-gray-700">Cantidad</th>
              <th class="px-4 py-3 text-left font-medium text-gray-700">Total</th>
            </tr>
          </thead>
