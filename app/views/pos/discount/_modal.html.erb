<%= turbo_frame_tag "item_discount_modal" do %>
  <div class="p-4">
    <%= form_with url: '/pos/apply_discount', method: :post, data: { controller: "cart-item", action: "submit->cart-item#applyDetailedDiscount" } do |f| %>
      <%= f.hidden_field :product_id, value: params[:product_id] %>
      
      <div class="mb-4">
        <%= f.label :discount_percentage, "Porcentaje de descuento", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.number_field :discount_percentage, min: 0, max: 100, value: @current_discount, class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>
      
      <div class="mb-4">
        <%= f.label :discount_type, "Tipo de descuento", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.select :discount_type, 
          [
            ["Promoción", "promotion"], 
            ["Cliente frecuente", "regular_customer"], 
            ["Producto dañado", "damaged_product"],
            ["Oferta especial", "special_offer"],
            ["Otro", "other"]
          ], 
          { include_blank: "Seleccionar tipo" }, 
          class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>
      
      <div class="mb-4">
        <%= f.label :discount_reason, "Motivo del descuento", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_area :discount_reason, rows: 2, class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>
      
      <div class="flex justify-end">
        <button type="button" class="mr-2 px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" data-action="click->modal#close">
          Cancelar
        </button>
        <%= f.submit "Aplicar descuento", class: "px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>
<% end %>